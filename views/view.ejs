<!doctype html>
<html>
<head>
    <title>Boomerang</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/build/jasny-bootstrap.css">

    <link rel="stylesheet" href="/build/media-queries.css">
    <link rel="stylesheet" href="/build/boomerang.css">

    <script type="application/javascript" src="/build/jquery-1.11.3.min.js"></script>
    <script type="application/javascript" src="/build/jasny-bootstrap.min.js"></script>


    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>

<nav id="myNavmenu" class="navmenu navmenu-default navmenu-fixed-left offcanvas" role="navigation">
    <a class="navmenu-brand" href="#">Boomerang</a>
    <ul class="nav navmenu-nav">
        <li class="active"><a href="#">Find</a></li>
        <li><a href="/create">Create</a></li>
        <li><a href="/next">Answer</a></li>
    </ul>
</nav>
<div class="navbar navbar-default navbar-fixed-top">
    <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target="#myNavmenu" data-canvas="body">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
</div>
<div class="container">

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>

  <div class="well">
        <p>
            <%= boomerang.description  %><br>
        </p>
  </div>
    <div class="well">
        <p>
            <%= boomerang.response  %><br>
        </p>
    </div>
</div>
</body>
</html>