<!doctype html>
<html>
<head>
    <title>Boomerang</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/build/media-queries.css">
    <link rel="stylesheet" href="/build/boomerang.css">
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>


                    <%if (boomerang && boomerang.users.responder && boomerang.users.responder.toString() == user._id.toString()){%>
                    <div class="well">
                    <p>
                        <%= boomerang.description  %><br>

                    </p>

                    <form method="post">

                        <div class="form-group">
                            <textarea rows="3" class="form-control" name="response">
                            </textarea>
                        </div>

                        <input type="hidden" name="boomerangId" value="<%= boomerang._id %>"/>

                        <button type="submit" formaction="/complete" class="btn select-btn"></button>
                        <button type="submit" formaction="/toss" class="btn reject-btn"></button>
                    </form>
                    </div>

                    <% } else if (boomerang) {%>
                        <div class="well">
                        <p>
                            <%= boomerang.description  %><br>
                        </p>

                        <div class="row">

                                <form method="post">
                                    <input type="hidden" name="boomerangId" value="<%= boomerang._id %>"/>
                                    <button type="submit" formaction="/select" class="btn select-btn"></button>
                                    <button type="submit" formaction="/next" formmethod="get" class="btn reject-btn"></button>
                                </form>
                        </div>
                        </div>
                    <% } else { %>
                          <p>
                            no more<br>
                        </p>
                    <%}%>

        </div>
    <div class="col-sm-6 col-sm-offset-3">
        <form method="get">
            <div class="col-xs-6"><button type="submit" formaction="/find" class="btn">find</button></div>
            <div class="col-xs-6"><button type="submit" formaction="/create" class="btn">ask</button></div>
        </form>
    </div>

</div>
</body>
</html>