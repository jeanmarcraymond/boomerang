<!doctype html>
<html>
<head>
    <title>Boomerang</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1></span>Boomerang:</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- Create FORM -->
        <form action="/create" method="post">
            <div class="form-group">

                <textarea rows="3" class="form-control" name="boomerang">
                </textarea>
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Create</button>
        </form>

        <hr>

    </div>
    <div class="col-sm-6 col-sm-offset-3">

        <%
        boomerangs = boomerangs.sort(function(a,b){

            return b.created - a.created;
        });

        for(var i=0; i < boomerangs.length; i++) {
        %>

        <div class="row">

            <div class="col-sm-6">
                <div class="well">

                    <p>
                        <%= boomerangs[i].description  %><br>
                    </p>

                </div>
            </div>

        </div>

        <% } %>

    </div>
</div>

</body>
</html>